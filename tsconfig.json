{
  "compilerOptions": {
    "jsx": "react",                     // Enable JSX support
    "allowImportingTsExtensions": true, // Allow .ts and .tsx imports
    "strict": false,                    // Set to false to relax strict checks
    "noEmit": true,                     // Prevent emitting output files
    "module": "esnext",                 // Set module type to esnext or es2015
    "moduleResolution": "bundler",      // Use bundler module resolution strategy
    "skipLibCheck": true                // Skip type checking of declaration files
  },
  "include": ["src/**/*"],              // Include all files in src
  "exclude": ["node_modules"]           // Exclude node_modules
}
